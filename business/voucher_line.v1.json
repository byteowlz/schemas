{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Voucher Line Item",
  "description": "Expense voucher position aligned with sevdesk VoucherPos",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier"
    },
    "voucher_id": {
      "type": "integer",
      "description": "Parent voucher ID"
    },
    "line_no": {
      "type": "integer",
      "description": "Line position number"
    },
    "part_id": {
      "type": "integer",
      "description": "Linked product/part ID (optional for expenses)"
    },
    "description": {
      "type": "string",
      "description": "Line description"
    },
    "quantity": {
      "type": "number",
      "description": "Quantity",
      "minimum": 0
    },
    "unity": {
      "type": "string",
      "description": "Unit of measure code or label"
    },
    "unit_price_net": {
      "type": "number",
      "description": "Unit price excluding tax",
      "minimum": 0
    },
    "unit_price_gross": {
      "type": "number",
      "description": "Unit price including tax",
      "minimum": 0
    },
    "discount_pct": {
      "type": "number",
      "description": "Discount percentage",
      "minimum": 0
    },
    "tax_rate_pct": {
      "type": "number",
      "description": "Tax rate percentage",
      "minimum": 0
    },
    "booking_account": {
      "type": "string",
      "description": "Booking account/Datev account reference"
    },
    "total_net": {
      "type": "number",
      "description": "Line total excluding tax",
      "minimum": 0
    },
    "total_gross": {
      "type": "number",
      "description": "Line total including tax",
      "minimum": 0
    }
  },
  "required": [
    "voucher_id",
    "description"
  ],
  "$id": "https://raw.githubusercontent.com/byteowlz/schemas/refs/heads/main/business/voucher_line.v1.json",
  "schema_version": "1.0.0"
}
