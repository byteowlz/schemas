{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "description": "Schema for products/services in the based business management system",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier"
    },
    "sku": {
      "type": "string",
      "description": "Stock Keeping Unit code",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "description": "Product/service name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Detailed description"
    },
    "unit": {
      "type": "string",
      "description": "Unit of measurement (e.g., piece, hour, kg)",
      "minLength": 1
    },
    "price_net": {
      "type": "number",
      "description": "Unit price excluding tax",
      "minimum": 0
    },
    "tax_code": {
      "type": "string",
      "description": "Tax code/rate identifier"
    },
    "active": {
      "type": "boolean",
      "description": "Whether the product is currently active",
      "default": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": ["sku", "name", "unit", "price_net"]
}
