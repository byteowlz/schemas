{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "description": "Schema for products/services in the based business management system",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier"
    },
    "sku": {
      "type": "string",
      "description": "Stock Keeping Unit code",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "description": "Product/service name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Detailed description"
    },
    "part_number": {
      "type": "string",
      "description": "Part number used in sevdesk"
    },
    "unit": {
      "type": "string",
      "description": "Unit of measurement (e.g., piece, hour, kg)",
      "minLength": 1
    },
    "unity": {
      "type": "string",
      "description": "Unit code/name reference used in sevdesk Unity"
    },
    "price_net": {
      "type": "number",
      "description": "Unit price excluding tax",
      "minimum": 0
    },
    "price_gross": {
      "type": "number",
      "description": "Unit price including tax",
      "minimum": 0
    },
    "price_purchase": {
      "type": "number",
      "description": "Purchase price",
      "minimum": 0
    },
    "tax_code": {
      "type": "string",
      "description": "Tax code/rate identifier"
    },
    "tax_rate": {
      "type": "number",
      "description": "Tax rate percentage",
      "minimum": 0
    },
    "category_id": {
      "type": "integer",
      "description": "Category identifier for the part/product"
    },
    "stock": {
      "type": "number",
      "description": "Current stock level",
      "minimum": 0
    },
    "stock_enabled": {
      "type": "boolean",
      "description": "Whether stock tracking is enabled",
      "default": false
    },
    "active": {
      "type": "boolean",
      "description": "Whether the product is currently active",
      "default": true
    },
    "status": {
      "type": "integer",
      "description": "Status code (50=Inactive, 100=Active)"
    },
    "internal_comment": {
      "type": "string",
      "description": "Internal comment not shown on documents"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": [
    "sku",
    "name",
    "unit",
    "price_net"
  ],
  "$id": "https://raw.githubusercontent.com/byteowlz/schemas/refs/heads/main/business/product.v1.json",
  "schema_version": "1.0.0"
}
