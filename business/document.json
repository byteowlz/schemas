{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Business Document",
  "description": "Schema for business documents (invoices, quotes, purchase orders, credit notes) in the based system",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier"
    },
    "doc_type": {
      "type": "string",
      "enum": ["quote", "invoice", "credit", "po"],
      "description": "Document type"
    },
    "number": {
      "type": "string",
      "description": "Document number (e.g., INV-2024-001)",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["draft", "issued", "sent", "paid", "void"],
      "description": "Document status"
    },
    "party_id": {
      "type": "integer",
      "description": "ID of the party (client/vendor) this document is for"
    },
    "issue_date": {
      "type": "string",
      "format": "date",
      "description": "Date the document was issued"
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Payment due date (for invoices)"
    },
    "currency": {
      "type": "string",
      "description": "Currency code (ISO 4217)",
      "pattern": "^[A-Z]{3}$",
      "default": "EUR"
    },
    "tax_included": {
      "type": "boolean",
      "description": "Whether prices include tax",
      "default": false
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    },
    "total_net": {
      "type": "number",
      "description": "Total amount excluding tax",
      "minimum": 0
    },
    "total_tax": {
      "type": "number",
      "description": "Total tax amount",
      "minimum": 0
    },
    "total_gross": {
      "type": "number",
      "description": "Total amount including tax",
      "minimum": 0
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": ["doc_type", "number", "status", "party_id", "issue_date", "currency"]
}
