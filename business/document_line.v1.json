{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Document Line Item",
  "description": "Line item for invoices, orders, credit notes, and vouchers, aligned with sevdesk *Pos models",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier"
    },
    "document_id": {
      "type": "integer",
      "description": "ID of the parent document (invoice/order/credit/voucher)"
    },
    "line_no": {
      "type": "integer",
      "description": "Line position number"
    },
    "part_id": {
      "type": "integer",
      "description": "Linked product/part ID"
    },
    "description": {
      "type": "string",
      "description": "Line description"
    },
    "quantity": {
      "type": "number",
      "description": "Quantity",
      "minimum": 0
    },
    "unity": {
      "type": "string",
      "description": "Unit of measure code or label (e.g., piece, hour)"
    },
    "unit_price_net": {
      "type": "number",
      "description": "Unit price excluding tax",
      "minimum": 0
    },
    "unit_price_gross": {
      "type": "number",
      "description": "Unit price including tax",
      "minimum": 0
    },
    "discount_pct": {
      "type": "number",
      "description": "Discount percentage for the line",
      "minimum": 0
    },
    "tax_rate_pct": {
      "type": "number",
      "description": "Tax rate percentage for the line",
      "minimum": 0
    },
    "total_net": {
      "type": "number",
      "description": "Line total excluding tax",
      "minimum": 0
    },
    "total_gross": {
      "type": "number",
      "description": "Line total including tax",
      "minimum": 0
    },
    "booking_account": {
      "type": "string",
      "description": "Accounting/booking account reference"
    },
    "partial_invoice_type": {
      "type": "string",
      "enum": [
        "advance",
        "partial",
        "final"
      ],
      "description": "Partial/final invoice marker when derived from orders"
    }
  },
  "required": [
    "document_id",
    "description"
  ],
  "$id": "https://raw.githubusercontent.com/byteowlz/schemas/refs/heads/main/business/document_line.v1.json",
  "schema_version": "1.0.0"
}
