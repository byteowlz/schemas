{
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "imdb_url": {
      "type": "string"
    },
    "video_gallery": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "featured_reviews": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "review": {
            "type": "string"
          },
          "ratings": {
            "type": "object",
            "properties": {
              "enjoyment": {
                "type": "integer",
                "minimum": 0,
                "maximum": 10,
                "description": "enjoyment rating on a scale from 0 to 10"
              },
              "recommendation": {
                "type": "integer",
                "minimum": 0,
                "maximum": 10,
                "description": "recommendation rating on a scale from 0 to 10"
              },
              "acting": {
                "type": "integer",
                "minimum": 0,
                "maximum": 10,
                "description": "acting rating on a scale from 0 to 10"
              },
              "writing": {
                "type": "integer",
                "minimum": 0,
                "maximum": 10,
                "description": "writing rating on a scale from 0 to 10"
              },
              "intangibles": {
                "type": "integer",
                "minimum": 0,
                "maximum": 10
              }
            },
            "required": [
              "acting",
              "enjoyment",
              "intangibles",
              "recommendation",
              "writing"
            ]
          }
        }
      }
    },
    "soundtrack": {
      "type": "object",
      "properties": {
        "preview_link": {
          "type": "string"
        },
        "listen_on": {
          "type": "string"
        }
      },
      "required": ["listen_on", "preview_link"]
    },
    "related_links": {
      "type": "object",
      "properties": {
        "more_like_this": {
          "type": "string"
        },
        "related_interests": {
          "type": "string"
        },
        "faq": {
          "type": "string"
        },
        "contribute": {
          "type": "string"
        }
      },
      "required": ["contribute", "faq", "more_like_this", "related_interests"]
    }
  },
  "required": [
    "featured_reviews",
    "imdb_url",
    "related_links",
    "soundtrack",
    "summary",
    "title",
    "video_gallery"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}
