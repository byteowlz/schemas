{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/byteowlz/ctx/schemas/config.schema.json",
  "title": "ctx configuration",
  "description": "Configuration schema for ctx",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for editor support"
    },
    "capture": {
      "type": "object",
      "properties": {
        "include_clipboard": {
          "type": "boolean",
          "default": false
        },
        "include_screenshots": {
          "type": "boolean",
          "default": true
        },
        "include_accessibility": {
          "type": "boolean",
          "default": true
        },
        "include_actions": {
          "type": "boolean",
          "default": false
        },
        "accessibility_depth": {
          "type": "integer",
          "minimum": 0,
          "maximum": 16,
          "default": 3
        },
        "image_quality": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 85
        },
        "screenshot_timeout_ms": {
          "type": "integer",
          "minimum": 0,
          "default": 2000
        }
      },
      "additionalProperties": false
    },
    "providers": {
      "type": "object",
      "properties": {
        "default_provider": {
          "type": ["string", "null"]
        },
        "api_keys": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "properties": {
        "capture_dir": {
          "type": ["string", "null"]
        },
        "state_file": {
          "type": ["string", "null"]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
