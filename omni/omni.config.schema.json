{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "omni config",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "openai_base_url": { "type": "string" },
    "openai_model": { "type": "string" },
    "application_search_paths": {
      "type": "array",
      "items": { "type": "string" }
    },
    "toggle_shortcut": {
      "$ref": "#/definitions/shortcut"
    },
    "clipboard_shortcut": {
      "$ref": "#/definitions/shortcut"
    },
    "terminal_shortcut": {
      "$ref": "#/definitions/shortcut"
    },
    "audio_storage_path": { "type": "string" },
    "shell": { "type": "string" },
    "shell_args": {
      "type": "array",
      "items": { "type": "string" }
    },
    "terminal": {
      "type": "object",
      "properties": {
        "font": { "type": "string" },
        "font_size": { "type": "number" },
        "theme": {
          "type": "object",
          "properties": {
            "background": { "type": "string" },
            "foreground": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "theme": {
      "type": "object",
      "properties": {
        "system": { "type": "string" },
        "scheme": { "type": "string" },
        "palette": {
          "type": "object",
          "properties": {
            "base00": { "type": "string" },
            "base01": { "type": "string" },
            "base02": { "type": "string" },
            "base03": { "type": "string" },
            "base04": { "type": "string" },
            "base05": { "type": "string" },
            "base06": { "type": "string" },
            "base07": { "type": "string" },
            "base08": { "type": "string" },
            "base09": { "type": "string" },
            "base0A": { "type": "string" },
            "base0B": { "type": "string" },
            "base0C": { "type": "string" },
            "base0D": { "type": "string" },
            "base0E": { "type": "string" },
            "base0F": { "type": "string" }
          },
          "additionalProperties": false
        },
        "semantic": {
          "type": "object",
          "properties": {
            "background": { "type": "string" },
            "foreground": { "type": "string" },
            "primary": { "type": "string" },
            "secondary": { "type": "string" },
            "accent": { "type": "string" },
            "muted": { "type": "string" },
            "border": { "type": "string" },
            "success": { "type": "string" },
            "warning": { "type": "string" },
            "error": { "type": "string" },
            "info": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "paths": {
      "type": "object",
      "properties": {
        "themes_dir": { "type": "string" }
      },
      "additionalProperties": false
    },
    "scripts": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "cmd": { "type": "string" },
              "alias": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                ]
              }
            },
            "required": ["cmd"],
            "additionalProperties": false
          }
        ]
      }
    },
    "default_panel": {
      "type": "string",
      "description": "Default plugin panel to show when omnibar is opened (e.g., 'opencode-status', 'none')"
    },
    "plugin_commands": {
      "type": "object",
      "description": "Commands that plugins can execute. Key is the command name, value is the shell command.",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "shortcut": {
      "type": "object",
      "properties": {
        "modifiers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "key": { "type": "string" }
      },
      "required": ["modifiers", "key"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
