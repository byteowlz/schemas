{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "omni config",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "openai_base_url": { "type": "string" },
    "openai_model": { "type": "string" },
    "application_search_paths": {
      "type": "array",
      "items": { "type": "string" }
    },
    "toggle_shortcut": {
      "$ref": "#/definitions/shortcut"
    },
    "clipboard_shortcut": {
      "$ref": "#/definitions/shortcut"
    },
    "terminal_shortcut": {
      "$ref": "#/definitions/shortcut"
    },
    "audio_storage_path": { "type": "string" },
    "shell": { "type": "string" },
    "shell_args": {
      "type": "array",
      "items": { "type": "string" }
    },
    "terminal": {
      "type": "object",
      "properties": {
        "font": { "type": "string" },
        "font_size": { "type": "number" },
        "theme": {
          "type": "object",
          "properties": {
            "background": { "type": "string" },
            "foreground": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "scripts": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "cmd": { "type": "string" },
              "alias": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                ]
              }
            },
            "required": ["cmd"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "definitions": {
    "shortcut": {
      "type": "object",
      "properties": {
        "modifiers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "key": { "type": "string" }
      },
      "required": ["modifiers", "key"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
